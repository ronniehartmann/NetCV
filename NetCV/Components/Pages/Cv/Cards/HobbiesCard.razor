@using Application.Services.Resources

@inject ResourceService<HobbyDto> HobbyService

@if (Hobbies.Any())
{
    <RadzenCard id="hobbies">
        <RadzenText TextStyle="TextStyle.H4" Text="Hobbies" />

        @foreach (var hobby in Hobbies)
        {
            <RadzenStack Orientation="Orientation.Horizontal">
                <RadzenIcon Icon="@hobby.Icon" />
                <RadzenText Text="@hobby.Name" />
            </RadzenStack>
        }
    </RadzenCard>
}

@code {
    private IEnumerable<HobbyDto> Hobbies = [];

    protected override async Task OnInitializedAsync()
    {
        Hobbies = await HobbyService.GetResourcesAsync();
    }
}