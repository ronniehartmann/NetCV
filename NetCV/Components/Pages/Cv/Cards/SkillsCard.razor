@using Application.Services.Resources

@inject ResourceService<SkillDto> SkillService

@if (Skills.Any())
{
    <RadzenCard id="skills">
        <RadzenText TextStyle="TextStyle.H4" Text="Professional Skills" />

        <RadzenRow>
            @foreach (var skill in Skills)
            {
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenText Style="font-weight: bold;">@skill.Name</RadzenText>
                        <RadzenProgressBar Value="@skill.Level" ShowValue="false" />
                    </RadzenColumn>
            }
        </RadzenRow>
    </RadzenCard>
}

@code {
    private IEnumerable<SkillDto> Skills = [];

    protected override async Task OnInitializedAsync()
    {
        Skills = await SkillService.GetResourcesAsync();
    }
}